@page
@model lab5.Pages.Books.IndexModel

<div class="d-flex justify-content-between align-items-center pb-2">
    <h1>Users</h1>
    <a asp-controller="User" asp-action="Create" class="btn btn-success">Add user</a>
</div>
<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">LastName</th>
      <th scope="col">FirstName</th>
      <th scope="col">MiddleName</th>
      <th scope="col">Address</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
       @foreach(var user in Model)
        {
            <tr>
                <th scope="row">@user.LastName</th>
                <th scope="row">@user.FirstName</th>
                <th scope="row">@user.MiddleName</th>
                <td>@user.Address</td>
                <td>
                    <a asp-controller="User" asp-action="Edit" asp-route-id="@user.ID" class="btn btn-secondary">Edit user</a>
                </td>
                <td>
                    <a asp-controller="User" asp-action="Delete" asp-route-id="@user.ID" class="btn btn-danger">Delete user</a>
                </td>
            </tr>
        }
  </tbody>
</table>
