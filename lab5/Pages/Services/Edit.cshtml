@page
@model lab5.Pages.Books.EditModel

<h1>Edit service</h1>
<form method="post" asp-action="Edit">
  <div class="form-group row">
	  <label>ServiceName</label>
	  <div class="col-sm-10">
		  <input asp-for="ServiceName" />
		  <span asp-validation-for="ServiceName"></span>
	  </div>
  </div>
  <div class="form-group row">
		<label>Description</label>
		<div class="col-sm-10">
			<input asp-for="ServiceDescription" />
			<span asp-validation-for="ServiceDescription"></span>
		</div>
  </div>
  <div class="col-sm-10 pt-2">
	  <button type="submit">Edit service</button>
  </div>
</form>