@page
@model lab5.Pages.Users.IndexModel

<div class="d-flex justify-content-between align-items-center pb-2">
    <h1>Orders</h1>
    <a asp-controller="Order" asp-action="Create" class="btn btn-success">Add order</a>
</div>
<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">Number</th>
      <th scope="col">Price</th>
      <th scope="col">Date of Admission</th>
      <th scope="col">Date of issue</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
        @foreach(var order in Model)
        {
            <tr>
                <th scope="row">
                    @order.Number
                </th>
                <td>
                    @order.Price
                </td>
                <td>
                    @order.DateOfAdmission.ToLongDateString()
                </td>
                <td>
                    @order.DateOfIssue.ToShortDateString()
                </td>
                <td>
                    <a asp-controller="Order" asp-action="Delete" asp-route-id="@order.ID" class="btn btn-danger">Delete Order</a>
                </td>
            </tr>
        }
  </tbody>
</table>
